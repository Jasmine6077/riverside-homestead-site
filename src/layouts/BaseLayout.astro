---
import BaseLayout from "../../layouts/BaseLayout.astro";

// however you're loading posts:
import { getCollection } from "astro:content";
const posts = await getCollection("journal");
---

<BaseLayout title="Journal">

  <!-- Blog posts FIRST -->
  <section class="journalPosts">

    <h1 class="journalTitle">From the Journal</h1>

    {posts.map(post => (
      <article class="journalPostCard">
        <h2>
          <a href={`/journal/${post.slug}/`}>{post.data.title}</a>
        </h2>
        <p>{post.data.description}</p>
      </article>
    ))}

  </section>

  <!-- Then the cards -->
  <section class="journalExtras">

    <div class="journalCard">
      <h3>Coming Soon</h3>
      <p>More reflections, stories, and gentle thoughts are on their way.</p>
    </div>

    <div class="journalCard">
      <h3>Follow Along</h3>
      <p>
        See updates on Instagram<br/>
        <a href="https://instagram.com/riversidehomesteadmaine" target="_blank">
          @riversidehomesteadmaine
        </a>
      </p>
    </div>

  </section>

</BaseLayout>