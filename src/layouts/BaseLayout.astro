---
import "../styles/site.css";

const { title = "Riverside Homestead" } = Astro.props;
const path = Astro.url.pathname;
const isActive = (href) => (href === "/" ? path === "/" : path.startsWith(href));
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>
</head>

<body>
  <!-- Header -->
  <header class="siteHeader">
    <div class="headerInner">
      <a class="brand" href="/">
        <img
          src="/images/logo.png"
          alt="Riverside Homestead logo"
          class="brandLogo"
        />

        <div class="brandText">
          <div class="brandTitle">Riverside Homestead</div>
        </div>
      </a>

      <nav class="nav">
        <a href="/" class={isActive("/") ? "active" : ""}>Home</a>
        <a href="/about" class={isActive("/about") ? "active" : ""}>About</a>
        <a href="/journal" class={isActive("/journal") ? "active" : ""}>Journal</a>
        <a href="/shop" class={isActive("/shop") ? "active" : ""}>Shop</a>
      </nav>
    </div>

    <!-- subtitle line UNDER header -->
    <div class="siteSubtitle">
      Handmade goods, healing journeys, and a life rooted in intention.
    </div>
  </header>

  <!-- Main -->
  <main class="siteMain">
    <slot />
  </main>
</body>
</html>