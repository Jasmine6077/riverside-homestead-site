---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getJournalPosts } from "../../lib/notion";

const posts = await getJournalPosts();
const post = posts.find((p) => p.slug === Astro.params.slug);
---

<BaseLayout title={post.title}>
  <article class="postPage">
    <div class="container postInner">
      <p class="postKicker">{post.date}</p>
      <h1 class="postTitle">{post.title}</h1>
      <p class="postBody">{post.summary}</p>

      <p class="postBack">
        <a href="/journal">‚Üê Back to Journal</a>
      </p>
    </div>
  </article>
</BaseLayout>